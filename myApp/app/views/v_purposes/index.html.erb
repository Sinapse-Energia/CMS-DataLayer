<p id="notice"><%= notice %></p>

<h1>Listing V Purposes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @v_purposes.each do |v_purpose| %>
      <tr>
        <td><%= v_purpose.name %></td>
        <td><%= link_to 'Show', v_purpose %></td>
        <td><%= link_to 'Edit', edit_v_purpose_path(v_purpose) %></td>
        <td><%= link_to 'Destroy', v_purpose, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

