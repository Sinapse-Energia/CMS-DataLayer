<h1>Listing V Typelights</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @v_typelights.each do |v_typelight| %>
      <tr>
        <td><%= v_typelight.name %></td>
        <td><%= v_typelight.short_name %></td>
        <td><%= link_to 'Show', v_typelight %></td>
        <td><%= link_to 'Edit', edit_v_typelight_path(v_typelight) %></td>
        <td><%= link_to 'Destroy', v_typelight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

