<p id="notice"><%= notice %></p>

<h1>Listing V Reasons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @v_reasons.each do |v_reason| %>
      <tr>
        <td><%= v_reason.name %></td>
        <td><%= link_to 'Show', v_reason %></td>
        <td><%= link_to 'Edit', edit_v_reason_path(v_reason) %></td>
        <td><%= link_to 'Destroy', v_reason, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

