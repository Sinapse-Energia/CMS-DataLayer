<p id="notice"><%= notice %></p>

<h1>Listing V Actions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @v_actions.each do |v_action| %>
      <tr>
        <td><%= v_action.name %></td>
        <td><%= link_to 'Show', v_action %></td>
        <td><%= link_to 'Edit', edit_v_action_path(v_action) %></td>
        <td><%= link_to 'Destroy', v_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

